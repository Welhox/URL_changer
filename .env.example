# Environment Configuration
ENVIRONMENT=production
DOMAIN=your-domain.com
BASE_URL=https://your-domain.com

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/url_changer
# For development: sqlite:///./url_changer.db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY=your-api-key-for-authentication

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Logging
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://coventur.es,https://www.coventur.es

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/coventur.es.crt
SSL_KEY_PATH=/etc/ssl/private/coventur.es.key