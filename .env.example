# Environment Configuration
ENVIRONMENT=production
DOMAIN=coventure.es
BASE_URL=https://coventure.es

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost/url_shortener
# For development: sqlite:///./url_shortener.db

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
API_KEY=your-api-key-for-authentication

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=INFO

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://coventure.es,https://www.coventure.es

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/coventure.es.crt
SSL_KEY_PATH=/etc/ssl/private/coventure.es.key