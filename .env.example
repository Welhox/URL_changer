# Environment Configuration for URL Shortener
ENVIRONMENT=production
DOMAIN=your-domain.com
BASE_URL=https://your-domain.com
DEBUG=false

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/url_changer
# For development: sqlite:///./url_changer.db
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key

# Security Configuration
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-very-secure-jwt-secret-key-at-least-32-characters-long
ACCESS_TOKEN_EXPIRE_MINUTES=30
MIN_PASSWORD_LENGTH=8
API_KEY=your-api-key-for-authentication

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
ENABLE_STRICT_RATE_LIMITING=true

# Security Headers
ENABLE_SECURITY_HEADERS=true
CONTENT_SECURITY_POLICY="default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'"
STRICT_TRANSPORT_SECURITY_MAX_AGE=31536000
X_FRAME_OPTIONS=DENY

# URL Validation & Security
ALLOWED_REDIRECT_DOMAINS=["localhost:3000", "yourdomain.com"]
BLOCK_PRIVATE_IPS=true
ENABLE_URL_SANITIZATION=true
BLOCK_SUSPICIOUS_USER_AGENTS=true
MAX_CUSTOM_CODE_LENGTH=20

# Audit Logging
ENABLE_AUDIT_LOGGING=true
LOG_FAILED_ATTEMPTS=true
LOG_SECURITY_EVENTS=true
LOG_LEVEL=INFO

# Slack Bot Configuration
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_CLIENT_ID=your-client-id
SLACK_CLIENT_SECRET=your-client-secret

# CORS Origins (comma-separated)
ALLOWED_ORIGINS=https://coventur.es,https://www.coventur.es

# SSL/TLS
SSL_CERT_PATH=/etc/ssl/certs/coventur.es.crt
SSL_KEY_PATH=/etc/ssl/private/coventur.es.key